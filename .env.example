# EASS Movie Service â€“ Environment Template
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!

# ============================================================================
# App Settings (Session 03+)
# ============================================================================
MOVIE_APP_NAME="Movie Service"
MOVIE_DEFAULT_PAGE_SIZE=20
MOVIE_FEATURE_PREVIEW=false

# ============================================================================
# Database (Session 05+ multi-DB modes)
# ============================================================================
# Options: memory | sqlite | postgres
MOVIE_DB_MODE=sqlite
MOVIE_DATABASE_URL_SQLITE=sqlite:///./data/movies.db
MOVIE_DATABASE_URL_POSTGRES=postgresql+psycopg://movie:movie@localhost:5432/movies
MOVIE_DATABASE_URL_TEST=sqlite:///./data/movies-test.db
MOVIE_DATABASE_ECHO=false
MOVIE_POOL_SIZE=5
MOVIE_POOL_TIMEOUT=30

# Legacy single-URL fallback (Session 04)
# DATABASE_URL=sqlite:///./movies.db

# ============================================================================
# Security & JWT (Session 11+)
# ============================================================================
# Generate a secure secret: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# Redis (Session 10+, optional for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# LM Studio (Session 08+, optional for local LLM)
# ============================================================================
LM_STUDIO_URL=http://localhost:1234/v1/chat/completions
LM_STUDIO_MODEL=local-model

# ============================================================================
# AWS Module Progress (Track manually, then set to true after completion)
# ============================================================================
AWS_COMPUTE_DONE=false
AWS_STORAGE_DONE=false
AWS_DATABASES_DONE=false

# ============================================================================
# Deployment & Logging (Optional advanced features)
# ============================================================================
LOG_LEVEL=INFO
ENVIRONMENT=development

# For production, use:
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# Ensure SECRET_KEY is strong (openssl rand -hex 32)
# Use managed Redis if scaling
